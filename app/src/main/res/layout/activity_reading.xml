<?xml version="1.0" encoding="utf-8"?>
<com.anovelmous.app.ui.reading.ReadingView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/reading_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:ignore="UnusedAttribute"
        >
        <LinearLayout
            android:id="@+id/reading_toolbar_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/reading_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reading_toolbar_title"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <com.anovelmous.app.ui.misc.BetterViewAnimator
        android:id="@+id/reading_animator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out"
        >
        <RelativeLayout
            android:id="@+id/reading_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="48dp"
            >
            <ImageView
                android:id="@+id/reading_loading_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/loading"
                android:scaleType="center"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/reading_loading_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/trending_loading_image"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/loading_message"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/reading_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="48dp"
            >
            <ImageView
                android:id="@+id/reading_error_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/error"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/trending_error_image"
                android:gravity="center_horizontal"
                android:text="@string/error_title"
                android:textSize="34sp"
                android:textColor="?android:attr/textColorPrimary"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trending_error_image"
                android:gravity="center_horizontal"
                android:text="@string/error_message"
                android:textColor="?android:attr/textColorSecondary"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/reading_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.anovelmous.app.ui.misc.BetterViewAnimator>
</com.anovelmous.app.ui.reading.ReadingView>
